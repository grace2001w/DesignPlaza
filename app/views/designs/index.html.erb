<h1>Listing designs</h1>

<% @designs.each do |design| %>
    <%= design.title %><br>
    <%= ('<img src="data:image/jpg;base64,%s" class="thumbnail">' % Base64.encode64(design.thumbnail)).html_safe %>
    <br>
    <%= design.description %><br>
    <%= design.date %><br>
    <%= design.size %><br>
    $<%= design.price %><br>
    <%= link_to 'Show', design %>
    <%= link_to 'Edit', edit_design_path(design) %>
    <%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %>
    <br>
<% end %>

<br />

<%= link_to 'New Design', new_design_path %>
